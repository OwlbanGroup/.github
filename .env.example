# AI Dashboard Environment Variables Template
# Copy this file to .env and fill in your actual values

# ========================================
# REQUIRED API KEYS
# ========================================

# OpenAI API Key (Required for GPT-4 and DALL-E features)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Key (Required for text generation, image generation, etc.)
HF_API_KEY=your_huggingface_api_key_here

# ========================================
# OPTIONAL API KEYS (for full functionality)
# ========================================

# Microsoft Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Amazon Web Services
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# NVIDIA NGC Cloud
NVIDIA_API_KEY=your_nvidia_ngc_api_key
NVIDIA_ORG_ID=your_nvidia_org_id

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# ========================================
# DATABASE & CACHE
# ========================================

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/dashboard

# Redis Connection String
REDIS_URL=redis://localhost:6379

# ========================================
# SECURITY
# ========================================

# JWT Secret (Generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here

# ========================================
# APPLICATION
# ========================================

# Application Environment
NODE_ENV=production

# Server Port
PORT=3000

# ========================================
# LOGGING
# ========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# MONITORING
# ========================================

# Enable Prometheus metrics
ENABLE_METRICS=true

# ========================================
# RATE LIMITING
# ========================================

# Maximum requests per window per IP
RATE_LIMIT_MAX=100

# Rate limit window in minutes
RATE_LIMIT_WINDOW=15
